<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:IBindingReplacement.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:extensions="clr-namespace:IBindingReplacement.Extensions"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="IBindingReplacement.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="IBindingReplacement">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <StackPanel Spacing="10">
        <StackPanel>
            <TextBlock Text="Direct assignment" />
            <Path Data="{extensions:BindResource Key={Binding IconKey}}"
                  Fill="Black" />
        </StackPanel>
        <StackPanel>
            <TextBlock Text="Using Style" />
            <Path Classes="IconPath"
                  Fill="Black" />
        </StackPanel>
    </StackPanel>


</Window>
